@model DoGiaDung_TuanKiet.Models.NhaSanXuat

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="display: flex; justify-content: space-between; align-items: center;">
    <h2>Bạn có chắc chắn muốn xóa nhà sản xuất này?</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-dark" />
            <a href="@Url.Action("Index")" class="btn btn-primary">Quay lại</a>
        </div>
    }
</div>


<div>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            <img src="~/Image/@Model.Anh" alt="Hình ảnh" style="max-width: 150px; max-height: 150px; border: 1px solid #000;" />
        </dd>
        <dt>
           Tên nhà sản xuất
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenNhaSanXuat)
        </dd>

        <dt>
            Mã nhà sản xuất
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaNhaSanXuat)
        </dd>

        <dt>
            Ghi chú
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GhiChu)
        </dd>

    </dl>

    
</div>
