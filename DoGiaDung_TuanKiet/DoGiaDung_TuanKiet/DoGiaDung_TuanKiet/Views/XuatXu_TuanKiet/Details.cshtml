@model DoGiaDung_TuanKiet.Models.XuatXu

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="display: flex; justify-content: space-between; align-items: center;">
    <h2>Chi tiết thông tin quốc gia</h2>
    <p>
        @Html.ActionLink("Sửa", "Edit", new { id = Model.MaXuatXu }, new { @class = "btn btn-danger" })
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-primary" })
    </p>
</div>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dd>
            <img src="~/Image/@Model.Anh" alt="Hình ảnh" style="max-width: 150px; max-height: 150px; border: 1px solid #000;" />
        </dd>
        <dt>
            Quốc gia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenXuatXu)
        </dd>
        <dt>
            Mã quốc gia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaXuatXu)
        </dd>




    </dl>
</div>

