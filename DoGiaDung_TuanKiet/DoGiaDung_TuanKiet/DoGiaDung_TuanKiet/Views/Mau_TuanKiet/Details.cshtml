@model DoGiaDung_TuanKiet.Models.Mau

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="display: flex; justify-content: space-between; align-items: center;">
    <h2>Chi tiết thông tin màu</h2>
    <p>
        @Html.ActionLink("Sửa", "Edit", new { id = Model.MaMau }, new { @class = "btn btn-danger" })
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-primary" })

    </p>
</div>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dd>
            <img src="~/Image/@Model.Anh" alt="Hình ảnh" style="max-width: 150px; max-height: 150px;border:1px solid #000;" />
        </dd>
        <dt>
            Tên màu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenMau)
        </dd>
        <dt>
            Mã màu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaMau)
        </dd>




    </dl>
</div>

