@model DoGiaDung_TuanKiet.Models.NhaSanXuat

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h2>Thêm nhà sản xuất mới</h2>
        <p>
            <input type="submit" value="Thêm" class="btn btn-warning" />
            <a href="@Url.Action("Index")" class="btn btn-primary">Quay lại</a>
        </p>
    </div>
    <hr />
    <div class="form-group">
        Tên nhà sản xuất
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.TenNhaSanXuat, new { @class = "form-control",@rows=1 })
            @Html.ValidationMessageFor(model => model.TenNhaSanXuat, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        Mã nhà sản xuất (bắt buộc)
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.MaNhaSanXuat, new { @class = "form-control",@rows=1 })
            @Html.ValidationMessageFor(model => model.MaNhaSanXuat, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        Logo
        <div class="col-md-10">
            <input type="file" name="Anh" id="Anh" />
            @Html.ValidationMessageFor(model => model.Anh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Ghi chú
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.GhiChu, new { @class = "form-control", @rows = 10 })
            @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
        </div>
    </div>


</div>
}

<style>
    .input, select, textarea {
        max-width: 1000px;
    }
</style>