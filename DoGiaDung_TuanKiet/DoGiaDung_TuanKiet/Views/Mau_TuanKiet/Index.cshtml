@model IEnumerable<DoGiaDung_TuanKiet.Models.Mau>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="display: flex; justify-content: space-between; align-items: center;">
    <h2>Danh sách các màu</h2>
    @if (TempData["SuccessMessage"] != null)
    {
        <div id="successAlert" class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>

        <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
        <script>
    $(document).ready(function () {
        // Ẩn thông báo sau 5 giây
        setTimeout(function () {
            $("#successAlert").fadeOut();
        }, 5000); // Thời gian đặt là 5 giây
    });
        </script>
    }
    <p><a href="@Url.Action("Create")" class="btn btn-warning">Thêm màu mới</a></p>
</div>

<table class="table">
    <tr>
        <th>
            Ảnh
        </th>
        <th>
            Màu
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Image/@item.Anh" alt="Hình ảnh" style="max-width: 150px; max-height: 150px;border:1px solid #000;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenMau)
            </td>

            <td style="text-align:right">
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaMau }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaMau }, new { @class = "btn btn-success" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaMau }, new { @class = "btn btn-dark" })

            </td>
        </tr>
    }

</table>
